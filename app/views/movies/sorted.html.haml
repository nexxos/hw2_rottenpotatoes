-#  This file is app/views/movies/index.html.haml
%h1 All Movies, sorted

%table#movies
  %thead
    %tr
      %th= link_to "Movie Title", '/movies/sorted'
      %th Rating
      %th= link_to "Release Date", "/movies/sorted/release_date"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
